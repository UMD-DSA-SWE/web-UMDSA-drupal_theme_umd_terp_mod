<div class="carousel-bg carousel-bg-dark">
  <div class="carousel-nav">
    <button class="carousel-nav-button carousel-nav-prev" aria-label="Previous slide">
      <span class="icon icon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Previous slide</span>
    </button>
    <button class="carousel-nav-button carousel-nav-next" aria-label="Next slide">
      <span class="icon icon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next slide</span>
    </button>
  </div>
  <div class="carousel">
    {% for item in items %}
      {% include "@carousel-item" with {
        "image": item.image,
        "title": item.title,
        "content": item.content
      } %}
    {% endfor %}
  </div>
</div>