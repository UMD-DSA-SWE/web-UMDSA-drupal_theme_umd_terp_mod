<footer class="site-footer" aria-label="Footer">
  <div class="site-footer-main">
    <div class="max-bound">
      <nav class="site-footer-nav">
        {{ drupal_menu('footer') }}
      </nav>
      <div class="site-footer-about">
        <div class="site-footer-logo">
          <img src="{{ assets_path }}/img/Placeholder_Logo_Dark.svg" alt="{{ site_name}} logo">
        </div>
        <div class="site-footer-address">
          <strong>{{ site_name }}</strong><br>
          <span>{{ umd_terp_address }} </span><span class="text-red" aria-hidden="true">&nbsp;Â·&nbsp;</span><a href="tel:+{{ umd_terp_phone|preg_replace('/[^0-9]/', '') }}">{{ umd_terp_phone }}</a>
        </div>
        <div class="site-footer-social">
          {% include directory ~ '/templates/partials/social-links.html.twig' %}
        </div>
      </div>
    </div>
  </div>
  <div class="site-footer-legal">
    <div class="max-bound">
      {{ drupal_menu('global') }}
    </div>
  </div>
</footer>